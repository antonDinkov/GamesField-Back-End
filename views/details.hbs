<section id="details-page">
    <div class="main_card">
        <div class="card_left">
            <div class="card-details">

                <h1>Model: {{post.model}}</h1>
                <h3>Posted by: Alex Smith</h3>

                <div class="card-specs">
                    <p class="card-manufacturer">Manufacturer: {{post.manufacturer}}</p>
                    <p class="card-engine">Engine Type: {{post.engine}}</p>
                    <p class="card-top-speed">Top Speed: {{post.topSpeed}} kmph</p>
                </div>

                <p class="disc">
                    {{post.description}}
                </p>

                <!-- If there is no registered user, do not display buttons-->
                {{#if isLoggedIn}}
                <div class="social-btn">
                    {{#if isAuthor}}
                    <!-- Only for registered user and author of the post -->
                    <a href="/catalog/{{post._id}}/edit" class="edit-btn">Edit</a>
                    <a href="/catalog/{{post._id}}/delete" class="del-btn">Delete</a>
                    {{else}}
                        {{#if hasInteracted}}
                            <p class="you-liked">Thanks For The Like</p>
                        {{else}}
                            <a href="/catalog/{{post._id}}/interact" class="like-btn">Like</a>
                        {{/if}}
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        <div class="card_right">
            <img src="{{post.image}}" alt="image">
        </div>
    </div>
</section>

<section id="likes">
    <div class="like-info">
        <div class="card_left">
            <div class="card-details">
                <h1>Likes</h1>
                <div class="card-like">
                    <!-- Show the rating of likes, if there are no likes yet, the number must be 0. -->
                    <p class="PV">Total likes: {{interactionCount}}</p>
                </div>
                
                <!-- If there are already people who have cast their like for the post, separate their emails with a comma and a space ", " -->
                {{#if interactorsNames}}
                    <p class="disc">People who liked the post - {{interactorsNames}}</p>
                {{else}}
                    <p class="disc">People who liked the post - No one has liked yet.</p>
                {{/if}}
                <!-- <p class="disc">People who liked the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->
            </div>
        </div>
    </div>
</section>